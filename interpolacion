#include <iostream>
#include <math.h>
#define filas 3
using namespace std;

double func (double x){
	return x + 2/x;
}


int main(int argc, char *argv[]) {
	double m[filas][2] = {{1,3},{2,3},{2.5,3.3}};
	double x;
	double e;
	printf("Recuerde haber definido la funcion previamente\n");
	printf("Ingrese el valor a interpolar\n");
	scanf("%lf", &x);
	
	double sum = 0;
	for (int i = 0; i < filas; i++) {
		double producto = 1;
		for (int j = 0; j < filas; j++) {
			if (j != i) {
				producto = producto * ((x - m[i][0]) / (m[j][0] - m[i][0]));
			}
		}
		sum = sum + m[i][1] * producto;
	}
	e = fabs(func(x) - sum);
	printf("El valor interpolado para %lf es: %E, con un error de %E", x, sum, e);
	
	return 0;
}

